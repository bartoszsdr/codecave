---
import '../styles/global.scss'

export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<meta name="description" content="Bartosz Sidorowicz is a front-end web developer specializing in building (and occasionally designing) exceptional digital experiences."> 
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Fira+Code&family=Inter:wght@200;400;700&display=swap'
			rel='stylesheet'
		/>
		<!-- Design credits goes to brittanychiang.com -->
		<title>{title}</title>
	</head>
	<body>
		<div class='wrapper'>
			<slot />
		</div>
	</body>
</html>
