---
import '../styles/global.scss'

export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Fira+Code&family=Inter:wght@200;400;700&display=swap'
			rel='stylesheet'
		/>
		<!-- Layout credits goes to brittanychiang.com -->
		<title>{title}</title>
	</head>
	<body>
		<div class='wrapper'>
			<slot />
		</div>
	</body>
</html>

<style>
	.wrapper {
		margin: 0 auto;
		padding: 0 1em;
		width: 100%;
		max-width: 1400px;
	}
</style>
