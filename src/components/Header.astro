<style lang='scss'>
	.nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		height: 70px;
		&__logo {
			height: 60px;
		}
		&__list {
			display: flex;
			list-style: none;
			font-size: 1.3rem;
		}
		&__item {
			a {
				padding: 1rem;
				transition: color 0.1s;
			}
			a:hover {
				color: #008afb;
			}
			span {
				color: #008afb;
				font-size: 1.2rem;
			}
		}
	}

	.hamburger {
		display: flex;
		justify-content: center;
		align-items: center;
		width: 30px;
		height: 30px;

		background-color: transparent;

		&__container {
			position: relative;
			width: 16px;
			height: 14px;
			overflow: hidden;
		}

		&__top {
			top: 0;
			left: 0;
			transform: translate(0);
		}

		&__middle {
			top: 6px;
			left: 0;
			transform: translate(8px);
		}

		&__bottom {
			top: 12px;
			left: 0;
			transform: translate(4px);
		}

		&__top,
		&__middle,
		&__bottom {
			position: absolute;
			width: 16px;
			height: 2px;
			background-color: #008afb;
			transition: transform 0.25s;
		}

		&:hover &__top {
			transform: translate(4px);
		}

		&:hover &__middle {
			transform: translate(0);
		}

		&:hover &__bottom {
			transform: translate(8px);
		}
	}

	.active {
		.hamburger__top {
			top: 6px;
			transform: translate(0) rotate(225deg);
		}

		.hamburger__middle {
			top: 6px;
			transform: translate(16px);
		}

		.hamburger__bottom {
			top: 6px;
			transform: translate(0) rotate(135deg);
		}
	}

	.hamburger.active {
		.hamburger__top,
		.hamburger__middle,
		.hamburger__bottom {
			transition: background-color 0.25s;
		}
		&:hover {
			.hamburger__top {
				background-color: #006dc7;
				transform: translate(0) rotate(225deg);
			}

			.hamburger__middle {
				background-color: #006dc7;
				transform: translate(16px);
			}

			.hamburger__bottom {
				background-color: #006dc7;
				transform: translate(0) rotate(135deg);
			}
		}
	}
</style>
